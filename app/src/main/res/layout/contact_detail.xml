<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_img"
            android:layout_margin="30dp"
            android:src="@drawable/icon_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"/>

    <TextView
            tools:text="Place Holder Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_txt_view"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            tools:text="Place Holder Name"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/number_txt_view"
            android:textSize="18sp"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/name_txt_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            tools:text="Place Holder Name"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_txt_view"
            android:textSize="18sp"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/number_txt_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_call"
            android:id="@+id/call_img_btn"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@+id/profile_img"
            app:layout_constraintBottom_toBottomOf="@+id/profile_img"
            app:layout_constraintTop_toTopOf="@+id/profile_img"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sms"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:id="@+id/sms_img_btn"
            app:layout_constraintStart_toEndOf="@+id/call_img_btn"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_img"
            app:layout_constraintTop_toTopOf="@+id/profile_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>